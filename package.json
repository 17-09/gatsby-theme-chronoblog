{
  "name": "gatsby-theme-chronoblog-workspace",
  "private": true,
  "license": "MIT",
  "author": "Ivan Ganev <ganevio92@gmail.com>",
  "workspaces": [
    "gatsby-theme-chronoblog",
    "starters/*"
  ],
  "scripts": {
    "build:chronoblog": "yarn clean && yarn workspace gatsby-starter-chronoblog build",
    "clean": "yarn workspaces run clean",
    "start:chronoblog": "yarn clean && yarn workspace gatsby-starter-chronoblog start",
    "lint": "eslint './gatsby-theme-chronoblog/**/*' './starters/**/*'",
    "lint:fix": "yarn lint --fix"
  },
  "devDependencies": {
    "@types/node": "^12.0.12",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/react-helmet": "^5.0.8",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-html": "^5.0.5",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsdoc": "^15.7.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.6.1",
    "eslint-plugin-simple-import-sort": "^4.0.0",
    "eslint-plugin-sonarjs": "^0.4.0",
    "eslint-plugin-unicorn": "^9.1.1",
    "husky": "^3.0.1",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "typescript": "^3.5.2",
    "yarn": "^1.17.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn build:chronoblog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
